<?xml version="1.0" encoding="ISO-8859-1"?>

<sensor_hal_config>
  <accelerometer>
    <sensor>
      <name>PSH Accelerometer</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange unit="GRAVITY_EARTH">2</maxRange>
      <resolution unit="GRAVITY_EARTH">0.000488281</resolution>
      <power>0.006</power>
      <minDelay>10000</minDelay>
    </sensor>
  </accelerometer>
  <light>
    <sensor>
      <name>PSH Ambient Light sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>50000.0</maxRange>
      <resolution>1.0</resolution>
      <power>0.35</power>
      <minDelay>0</minDelay>
    </sensor>
  </light>
  <proximity>
    <sensor>
      <name>PSH Proximity sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>15.0</maxRange>
      <resolution>15.0</resolution>
      <power>0.35</power>
      <minDelay>0</minDelay>
    </sensor>
  </proximity>
  <compass>
    <sensor>
      <name>PSH Magnetic field sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>800.0</maxRange>
      <resolution>0.5</resolution>
      <power>0.1</power>
      <minDelay>10000</minDelay>
    </sensor>
  </compass>
  <gyroscope>
    <sensor>
      <name>PSH Gyroscope sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange unit="M_PI">11.111111</maxRange>         <!-- 2000/180 -->
      <resolution unit="M_PI">0.000555556</resolution>   <!-- 1/10/180 -->
      <power>6.1</power>
      <minDelay>10000</minDelay>
    </sensor>
  </gyroscope>
  <pressure>
    <sensor>
      <name>PSH Pressure sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>120000</maxRange>
      <resolution>1.0</resolution>
      <power>0.001</power>
      <minDelay>50000</minDelay>
    </sensor>
  </pressure>
  <gravity>
    <sensor>
      <name>PSH Gravity sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange unit="GRAVITY_EARTH">2</maxRange>
      <resolution unit="GRAVITY_EARTH">0.000488281</resolution>
      <power>0.006</power>
      <minDelay>10000</minDelay>
    </sensor>
  </gravity>
  <linear_acceleration>
    <sensor>
      <name>PSH Linear Acceleration sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange unit="GRAVITY_EARTH">2</maxRange>
      <resolution unit="GRAVITY_EARTH">0.000488281</resolution>
      <power>0.006</power>
      <minDelay>10000</minDelay>
    </sensor>
  </linear_acceleration>
  <rotation_vector>
    <sensor>
      <name>PSH Rotation Vector sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>1</maxRange>
      <resolution>0.0000000596046</resolution>   <!-- 1.0/(1<<24) -->
      <power>0.106</power>
      <minDelay>10000</minDelay>
    </sensor>
  </rotation_vector>
  <orientation>
    <sensor>
      <name>PSH Orientation sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>360</maxRange>
      <resolution>1.0</resolution>
      <power>0.106</power>
      <minDelay>10000</minDelay>
    </sensor>
  </orientation>
  <gesture_flick>
    <sensor>
      <name>PSH Gesture Flick sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>6.0</maxRange>
      <resolution>1.0</resolution>
      <power>0.006</power>
      <minDelay>0</minDelay>
    </sensor>
  </gesture_flick>
  <terminal>
    <sensor>
      <name>PSH Terminal sensor</name>
      <vendor>Intel Inc.</vendor>
      <version>1</version>
      <maxRange>7.0</maxRange>
      <resolution>1.0</resolution>
      <power>0.006</power>
      <minDelay>0</minDelay>
    </sensor>
  </terminal>
</sensor_hal_config>
