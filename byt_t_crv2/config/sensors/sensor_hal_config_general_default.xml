<?xml version="1.0" encoding="ISO-8859-1"?>

<sensor_hal_config>
  <gyroscope>
    <platform_config>
      <name>gyro</name>
      <activate_path>/sys/bus/i2c/devices/3-0068/enable</activate_path>
      <poll_path>/sys/bus/i2c/devices/3-0068/poll</poll_path>
      <data_path></data_path>
      <config_path>/data/gyro.conf</config_path>
      <mapper axis_x="X" axis_y="Y" axis_z="Z"></mapper>
      <scale axis_x="0.8714" axis_y="0.8714" axis_z="0.8714"></scale>
      <range min="0" max="0"></range>
      <min_delay>10000000</min_delay>
    </platform_config>
    <sensor>
      <name>BMG160 Gyroscope sensor</name>
      <vendor>BOSCH</vendor>
      <version>1</version>
      <maxRange unit="M_PI">11.111111</maxRange>         <!-- 2000/180 -->
      <resolution unit="M_PI">0.000338889</resolution>   <!-- 61/1000/180 -->
      <power>6.1</power>
      <minDelay>10000</minDelay>
    </sensor>
  </gyroscope>
  <accelerometer>
    <platform_config>
      <name>accel</name>
      <activate_path>/sys/bus/i2c/devices/3-0011/enable</activate_path>
      <poll_path>/sys/bus/i2c/devices/3-0011/poll</poll_path>
      <data_path></data_path>
      <config_path></config_path>
      <mapper axis_x="Y" axis_y="X" axis_z="Z"></mapper>
      <scale axis_x="-0.9765" axis_y="-0.9765" axis_z="0.9765"></scale>
      <range min="0" max="0"></range>
      <min_delay>0</min_delay>
    </platform_config>
    <sensor>
      <name>Accelerometer</name>
      <vendor>BOSCH</vendor>
      <version>1</version>
      <maxRange unit="GRAVITY_EARTH">2</maxRange>
      <resolution unit="GRAVITY_EARTH">0.001</resolution>
      <power>0.11</power>
      <minDelay>10000</minDelay>
    </sensor>
  </accelerometer>
  <compass>
    <platform_config>
      <name>comp</name>
      <activate_path>/sys/bus/i2c/devices/3-0013/enable</activate_path>
      <poll_path>/sys/bus/i2c/devices/3-0013/poll</poll_path>
      <data_path></data_path>
      <config_path>/data/compass.conf</config_path>
      <mapper axis_x="Y" axis_y="X" axis_z="Z"></mapper>
      <scale axis_x="315.08" axis_y="315.08" axis_z="-655.36"></scale>
      <range min="0" max="0"></range>
      <min_delay>0</min_delay>
      <priv_data compass_filter_en="1"></priv_data>
    </platform_config>
    <sensor>
      <name>BMC150 3-axis Magnetic field sensor</name>
      <vendor>BOSCH</vendor>
      <version>1</version>
      <maxRange>250.0</maxRange>
      <resolution>0.3</resolution>
      <power>0.1</power>
      <minDelay>20000</minDelay>
    </sensor>
  </compass>
  <light>
    <platform_config>
      <name>cm32181</name>
      <activate_path>/sys/bus/i2c/devices/3-0010/enable</activate_path>
      <poll_path>/sys/bus/i2c/devices/3-0010/poll</poll_path>
      <data_path></data_path>
      <config_path></config_path>
      <mapper axis_x="X" axis_y="Y" axis_z="Z"></mapper>
      <scale axis_x="1.0" axis_y="1.0" axis_z="1.0"></scale>
      <range min="0" max="10000.0"></range>
      <min_delay>0</min_delay>
      <priv_data light_glass_factor="1"></priv_data>
    </platform_config>
    <sensor>
      <name>CM32181 Digital Ambient Light Sensor</name>
      <vendor>CM32181</vendor>
      <version>1</version>
      <maxRange>10000.0</maxRange>
      <resolution>0.1</resolution>
      <power>0.25</power>
      <minDelay>0</minDelay>
    </sensor>
  </light>
  <proximity>
    <platform_config>
      <name>stm8t143</name>
      <activate_path>/sys/bus/platform/devices/SRCL0001:00/enable</activate_path>
      <poll_path>/sys/bus/platform/devices/SRCL0001:00/poll</poll_path>
      <mapper axis_x="X" axis_y="Y" axis_z="Z"></mapper>
      <scale axis_x="1.0" axis_y="1.0" axis_z="1.0"></scale>
      <range min="0" max="0"></range>
      <min_delay>0</min_delay>
    </platform_config>
    <sensor>
      <name>STM8T143 Digital Proximity Sensor</name>
      <vendor>Avago</vendor>
      <version>1</version>
      <maxRange>6.0</maxRange>
      <resolution>6.0</resolution>
      <power>0.25</power>
      <minDelay>0</minDelay>
    </sensor>
  </proximity>
</sensor_hal_config>
